<%= form_for(:user, :url => user_path(@user), :html => { :method => :put }) do |f| %>
  
  <%= render(:partial => 'form')%>

  <%= link_to 'Back to user', user_path(@user), :class => 'arrow_link ontheright', :style => 'margin-right: 330px' %>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<% content_for(:breadcrumb) do %>
    <%= link_to "Back to user", user_path(@user), :style => "float:right", :class => "arrow_link" %>
    <%= link_to "Users", users_path %> &gt; 
    User <%= link_to @user.login, user_path(@user) %> &gt; 
    Edit user <%= link_to @user.login, user_path(@user) %> 
<% end %>

<% content_for(:page_title) do %>
  <% @page_title = "Edit user #{h(@user.login)}" %>
  <h2>Edit user <%= user_info(@user)%></h2>
<% end %>
